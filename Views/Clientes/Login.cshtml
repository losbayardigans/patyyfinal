@model patyy.Models.Cliente

<!-- Enlace al CSS específico del login -->
<head>
    <link rel="stylesheet" href="~/css/login.css" />
</head>

<body>
    <div class="registro">
        <h2>Iniciar Sesión</h2>

        <form asp-action="Login" method="post">
            <div class="input-group">
                <input type="email" id="correo" name="correo" required placeholder=" " />
                <label for="correo">Correo</label> <!-- Etiqueta flotante -->
            </div>

            <div class="input-group">
                <input type="password" id="contraseña" name="contraseña" required placeholder=" " />
                <label for="contraseña">Contraseña</label> <!-- Etiqueta flotante -->
            </div>

            <button type="submit">Iniciar Sesión</button>

            <div class="message">
                <p>¿No tienes cuenta? <a asp-action="Register">Regístrate aquí</a></p>
            </div>
        </form>
    </div>
</body>
