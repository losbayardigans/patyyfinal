@model IEnumerable<patyy.Models.Producto>
<style>
    .carta {
        border: none;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease-in-out;
    }

        .carta:hover {
            transform: scale(1.05);
        }

    .imagen-placeholder {
        width: 100%;
        height: 120px;
        background-color: #dee2e6;
        border-radius: 8px;
    }

    .carta-title {
        font-size: 1rem;
        font-weight: bold;
        margin-top: 10px;
        color: #343a40;
    }

    .carta-text {
        font-size: 1.2rem;
        color: #007bff;
        font-weight: bold;
    }

    .btn-custom {
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 20px;
        padding: 5px 10px;
    }

        .btn-custom:hover {
            background-color: #0056b3;
        }

    .container {
        padding-left: 15px;
        padding-right: 15px;
    }
</style>

<main class="col-md-9 col-lg-10 pt-4 container">
    <div class="row">
        @foreach (var Producto in Model)
        {
            <div class="col-6 col-md-4 col-lg-3 mb-4">
                <div class="carta h-100 text-center">
                    <div class="carta-body">
                        <div class="imagen-placeholder mb-3">
                            <img src="@Url.Content(Producto.ImageUrl ?? "~/img/snacks.jpg")" alt="@Producto.Nombre" class="img-fluid" style="height: 100%; width: 100%; object-fit: cover; border-radius: 8px;" />
                        </div>
                        <h6 class="carta-title">@Producto.Nombre</h6>
                        <p class="carta-text">@String.Format(new System.Globalization.CultureInfo("es-CL"), "{0:C0}", Producto.CantidadProductos != null ? Convert.ToInt32(Producto.CantidadProductos) : 0)</p>
                        <p class="carta-text">@String.Format(new System.Globalization.CultureInfo("es-CL"), "{0}", Producto.Descripcion ?? "Sin descripción")</p>
                        <p class="carta-text">@String.Format(new System.Globalization.CultureInfo("es-CL"), "{0:C0}", Producto.Precio != null ? Producto.Precio : 0)</p>

                        <!-- Formulario para añadir al carro -->
                        <form asp-controller="Carroes" asp-action="carrito" method="post">
                            <input type="hidden" name="productoId" value="@Producto.IdProducto" />
                            <button type="submit" class="btn btn-custom">Añadir al carro</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</main>
